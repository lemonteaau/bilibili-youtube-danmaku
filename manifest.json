{
    "manifest_version": 3,
    "name": "B2Y - YouTube 同步显示 Bilibili 弹幕",
    "version": "1.1.0",
    "description": "自动将Bilibili的弹幕同步显示在YouTube视频上",
    "permissions": ["storage", "activeTab"],
    "host_permissions": [
        "https://api.bilibili.com/*",
        "https://www.bilibili.com/*",
        "https://www.youtube.com/oembed*"
    ],
    "background": {
        "scripts": [
            "lib/browser-api.js",
            "lib/protobuf-parser.js",
            "lib/opencc.min.js",
            "utils/channelAssociation.js",
            "background/bangumi.js",
            "background/background.js"
        ],
        "persistent": false
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "b2y-danmaku@firefox.extension",
            "strict_min_version": "109.0"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": [
                "lib/browser-api.js",
                "utils/channelAssociation.js",
                "content/danmaku-engine.js",
                "content/youtube.js"
            ],
            "css": ["content/danmaku.css"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}
